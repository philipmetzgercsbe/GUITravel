<UserControl x:Class="Gui_Travel.CustomControls.tabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gui_Travel.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="1074" d:DesignWidth="768">
    <Grid>
        <TabControl HorizontalAlignment="Left"  Margin="10,10,10,10" VerticalAlignment="Top" Height="1074" Width="768" >
            <TabItem Header="You" MouseDown="LoadUserContent">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Hotels" MouseDown="LoadHotels">
                <StackPanel Name="HotelStackPanel"></StackPanel>
                
            </TabItem>
            <TabItem Header="Travels" MouseDown="LoadTravels">
               <StackPanel Name="TravelsStackPanel"></StackPanel>
            </TabItem>
        </TabControl>

    </Grid>
</UserControl>
