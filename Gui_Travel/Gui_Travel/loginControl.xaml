<UserControl x:Class="Gui_Travel.loginControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gui_Travel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label Name="usnLbl" Content="Username"></Label>
        <TextBox Name="UsnTxtbox" Text="Your Name" ></TextBox>
        <Label Name="pwLbl" Content="Password"></Label>
        <PasswordBox Name="PasswordBox" PasswordChar="*" MaxLength="10"></PasswordBox>
        <TextBlock Name="notRegisteredTxtBlock">
            <Hyperlink NavigateUri="registrationControl.xaml">Not Registered yet?</Hyperlink>
        </TextBlock>
            <Button Name="lgnButton" Content ="Login"> </Button>
            
    </Grid>
</UserControl>
